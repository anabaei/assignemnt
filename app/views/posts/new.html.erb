<div class="container">
<h1> Create Post </h1>
<%= bootstrap_form_for(@post) do |f| %>
  <%= f.select(:category_id) do %>
    <% @categories.each do |c| -%>
      <%= content_tag(:option, c.name, value: c.id) %>
    <% end %>
  <% end %>
  <%= f.text_field :title %>
  <%= f.text_field :body %>
  <%= f.submit "Create Post" %>
<% end %>
</div>
